							<children>
								<AnchorPane layoutX="29.0" prefHeight="55.0"
									prefWidth="212.0" styleClass="pageTitle"
									stylesheets="@application.css">
									<children>
										<ImageView fitHeight="25.0" fitWidth="25.0"
